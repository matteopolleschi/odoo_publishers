<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="report_invoice_discount_inherit" inherit_id="account.report_invoice_document">
            <xpath expr="//h2/span[1]" position="attributes">
                <attribute name="t-if">o.code != 'Nota' and (o.move_type == 'out_invoice' and (o.state == 'open' or o.state == 'paid'))</attribute>
            </xpath>
            <xpath expr="//h2/span[2]" position="attributes">
                <attribute name="t-if">o.code != 'Nota' and o.move_type == 'out_invoice' and o.state == 'draft'</attribute>
            </xpath>
            <xpath expr="//h2/span[1]" position="after">
                <span t-if="o.code == 'Nota' and o.move_type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Note</span>
            </xpath>
            <xpath expr="//h2/span[2]" position="after">
                <span t-if="o.code == 'Nota' and o.move_type == 'out_invoice' and o.state == 'draft'">Draft Note</span>
            </xpath>
            <xpath expr="//div[hasclass('page')]" position="inside">
                <center><span t-if="o.code == 'Nota' and o.move_type == 'out_invoice'">IVA assolta dall'editore a norma dell'art. 74, lett. c) DPR 633/1972.</span></center>
            </xpath>
        </template>

    </data>
</odoo>
